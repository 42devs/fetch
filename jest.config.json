{
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "testRegex": ".*\\.spec\\.ts",
  "transform": {
    "^.\\(t)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "./src/**/*"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  },
  "coveragePathIgnorePaterns": [],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@utils/(.*)$": "<rootDir>/src/utils/$1"
  },
  "moduleIgnorePatterns": [
    "<rootDir>/lib/",
    "<rootDir>/node_modules",
    "<rootDir>/coverage"
  ]
}
